<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
tools:context=".owner.PasswordChangeActivity">

<EditText
    android:id="@+id/etxt_ownerCurrentPassword"
    android:layout_width="380dp"
    android:layout_height="60dp"
    android:layout_marginTop="28dp"
    android:ems="10"
    android:fontFamily="@font/fira_sans_bold"
    android:hint="Nhập mật khẩu hiện tại"
    android:inputType="textPassword"
    android:textColor="@color/black"
    android:textColorHint="@color/black"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.483"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />

<EditText
    android:id="@+id/etxt_ownerNewPassword"
    android:layout_width="380dp"
    android:layout_height="60dp"
    android:layout_marginStart="119dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="119dp"
    android:ems="10"
    android:fontFamily="@font/fira_sans_bold"
    android:hint="Nhập mật khẩu mới"
    android:inputType="textPassword"
    android:textColor="@color/black"
    android:textColorHint="@color/black"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/etxt_ownerCurrentPassword" />

<EditText
    android:id="@+id/etxt_ownerReNewPassword"
    android:layout_width="380dp"
    android:layout_height="60dp"
    android:layout_marginStart="119dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="119dp"
    android:ems="10"
    android:fontFamily="@font/fira_sans_bold"
    android:hint="Nhập lại mật khẩu mới"
    android:inputType="textPassword"
    android:textColor="@color/black"
    android:textColorHint="@color/black"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/etxt_ownerNewPassword" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114"
        app:shapeAppearanceOverlay="@style/circle"
        app:strokeColor="@color/red"
        app:strokeWidth="5dp"
        tools:srcCompat="@tools:sample/avatars" />

<Button
    android:id="@+id/btn_owner_savePassword"
    style="@style/Widget.Material3.Button"
    android:layout_width="377dp"
    android:layout_height="57dp"
    android:layout_marginTop="52dp"
    android:backgroundTint="#3249ab"
    android:text="Xác nhận đổi mật khẩu"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/etxt_ownerReNewPassword" />

<Button
    android:id="@+id/btn_owner_backToInfo"
    style="@style/Widget.Material3.Button"
    android:layout_width="377dp"
    android:layout_height="57dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="@color/purple_700"
    android:text="Trở về trang thông tin"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_owner_savePassword" />

</androidx.constraintlayout.widget.ConstraintLayout>