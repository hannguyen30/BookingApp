<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".customer.EditProfileActivity">

    <EditText
        android:id="@+id/etxt_customerEmailAddress"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:fontFamily="@font/fira_sans_bold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />

    <EditText
        android:id="@+id/etxt_customerFullName"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="119dp"
        android:ems="10"
        android:fontFamily="@font/fira_sans_bold"
        android:hint="Họ tên đầy đủ"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_customerEmailAddress" />

    <EditText
        android:id="@+id/etxt_customerPhone"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="119dp"
        android:ems="10"
        android:fontFamily="@font/fira_sans_bold"
        android:hint="Số điện thoại"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_customerFullName" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114"
        app:shapeAppearanceOverlay="@style/circle"
        app:strokeColor="@color/lavender"
        app:strokeWidth="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_customer_saveInfo"
        style="@style/Widget.Material3.Button"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#478BF8"
        android:text="Lưu thông tin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_customer_changePassword" />

    <Button
        android:id="@+id/btn_customer_backToHome"
        style="@style/Widget.Material3.Button"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Cold_Blue"
        android:text="Trở về trang chủ"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_customer_saveInfo" />

    <Button
        android:id="@+id/btn_customer_changePassword"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/Dark"
        android:foregroundGravity="left"
        android:gravity="center"
        android:text="Đổi mật khẩu"
        app:iconGravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_customerPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>