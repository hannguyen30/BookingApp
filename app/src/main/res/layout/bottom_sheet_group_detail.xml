<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_round_remove_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fira_sans_bold"
            android:padding="8dp"
            android:text="Chọn phòng và khách"
            android:textAlignment="viewStart"
            android:textColor="@color/lavender"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_clear_24" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="15">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="12"
            android:text="Phòng"
            android:textColor="@color/lavender"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_roomdec"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/fira_sans"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/Dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtv_roomquant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_roominc"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/fira_sans"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/Dark"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAdult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="15">


        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="12"
            android:text="Người lớn"
            android:textColor="@color/lavender"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_adultdec"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/fira_sans"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/Dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtv_adultquant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_adultinc"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/fira_sans"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/Dark"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutKid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp"
        android:weightSum="15">


        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="12"
            android:text="Trẻ em"
            android:textColor="@color/lavender"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_kiddec"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/fira_sans"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/Dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtv_kidquant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_kidinc"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/fira_sans"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/Dark"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_peopleDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lavender"
        android:text="Xong"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>