<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/Dark"
tools:context=".customer.PasswordChangeActivity">

    <EditText
        android:id="@+id/etxt_customerCurrentPassword"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:fontFamily="@font/fira_sans_bold"
        android:hint="Nhập mật khẩu hiện tại"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/light_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />

    <EditText
        android:id="@+id/etxt_customerNewPassword"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="119dp"
        android:ems="10"
        android:fontFamily="@font/fira_sans_bold"
        android:hint="Nhập mật khẩu mới"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/light_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_customerCurrentPassword" />

    <EditText
        android:id="@+id/etxt_customerReNewPassword"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="119dp"
        android:ems="10"
        android:fontFamily="@font/fira_sans_bold"
        android:hint="Nhập lại mật khẩu mới"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/light_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_customerNewPassword" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114"
        app:shapeAppearanceOverlay="@style/circle"
        app:strokeColor="@color/lavender"
        app:strokeWidth="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_customer_savePassword"
        style="@style/Widget.Material3.Button"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/lavender"
        android:text="Xác nhận đổi mật khẩu"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_customerReNewPassword" />

    <Button
        android:id="@+id/btn_customer_backToInfo"
        style="@style/Widget.Material3.Button"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Cold_Blue"
        android:text="Trở về trang thông tin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_customer_savePassword" />

</androidx.constraintlayout.widget.ConstraintLayout>