<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark"
    tools:context=".customer.DateSelectionActivity">

    <Button
        android:id="@+id/btn_dateDec"
        style="@style/Widget.Material3.Button"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="134dp"
        android:backgroundTint="@color/green_200"
        android:fontFamily="@font/fira_sans_bold"
        android:text="Giảm"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="260dp"
        android:layout_height="64dp"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="157dp"
        android:fontFamily="@font/fira_sans_bold"
        android:gravity="center|top"
        android:text="Đêm"
        android:textColor="@color/white"
        android:textSize="34sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_dayNum" />

    <TextView
        android:id="@+id/txtv_dayNum"
        android:layout_width="260dp"
        android:layout_height="213dp"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="157dp"
        android:fontFamily="@font/fira_sans_bold"
        android:gravity="center|top"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="150dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_dateDec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dateInc"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_dateInc"
        style="@style/Widget.Material3.Button"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/green_200"
        android:fontFamily="@font/fira_sans_bold"
        android:gravity="center"
        android:text="Tăng"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btn_done"
        style="@style/Widget.Material3.Button"
        android:layout_width="304dp"
        android:layout_height="73dp"
        android:backgroundTint="@color/lavender"
        android:fontFamily="@font/fira_sans_bold"
        android:text="Hoàn tất"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dateDec"
        app:layout_constraintVertical_bias="0.457" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/fira_sans_bold"
        android:text="Chọn thời gian lưu trú"
        android:textColor="@color/white"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center|top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>