<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#080B13"
tools:context=".authen.SignupActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_sans_bold"
        android:text="Đăng ký tài khoản"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187" />

    <EditText
    android:id="@+id/etxtEmailAddress"
    android:layout_width="380dp"
    android:layout_height="60dp"
    android:layout_marginTop="16dp"
    android:ems="10"
    android:fontFamily="@font/fira_sans_bold"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:textColor="#FFFFFF"
    android:textColorHint="#6B90A1"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.483"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <EditText
        android:id="@+id/etxtFullName"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="119dp"
        android:ems="10"
        android:fontFamily="@font/fira_sans_bold"
        android:hint="Your full name"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#6B90A1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtEmailAddress" />

    <EditText
        android:id="@+id/etxtPhone"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="119dp"
        android:ems="10"
        android:fontFamily="@font/fira_sans_bold"
        android:hint="Phone Number"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#6B90A1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtFullName" />

    <EditText
    android:id="@+id/etxtPasswords"
    android:layout_width="380dp"
    android:layout_height="60dp"
    android:layout_marginTop="12dp"
    android:ems="10"
    android:fontFamily="@font/fira_sans_light"
    android:hint="Password"
    android:inputType="textPassword"
    android:textColor="#FFFFFF"
    android:textColorHint="#6B90A1"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.516"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/etxtPhone" />

<EditText
    android:id="@+id/etxtRePasswords"
    android:layout_width="380dp"
    android:layout_height="60dp"
    android:layout_marginTop="12dp"
    android:ems="10"
    android:fontFamily="@font/fira_sans_light"
    android:hint="Re-enter password"
    android:inputType="textPassword"
    android:textColor="#FFFFFF"
    android:textColorHint="#6B90A1"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.516"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/etxtPasswords" />

    <Button
        android:id="@+id/btnSignup"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/lavender"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="288dp"
        android:layout_height="45dp"
        android:layout_marginTop="70dp"
        android:text="Đăng ký"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkbox_agree" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="295dp"
        android:layout_height="132dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app" />

    <CheckBox
        android:id="@+id/chkbox_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/fira_sans"
        android:paddingStart="10dp"
        android:text="Tôi đồng ý với điều khoản của UTH Booking"
        android:textColor="#95BBCF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
    android:id="@+id/radioGroup"
    android:layout_width="380dp"
    android:layout_height="119dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/etxtRePasswords">

    <RadioButton
        android:id="@+id/rbtn_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/fira_sans"
        android:paddingStart="10dp"
        android:text="Tài khoản khách hàng"
        android:textColor="#95BBCF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtRePasswords" />

    <RadioButton
        android:id="@+id/rbtn_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_sans"
        android:paddingStart="10dp"
        android:text="Tài khoản chủ khách sạn"
        android:textColor="#95BBCF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbtn_customer" />
</RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>